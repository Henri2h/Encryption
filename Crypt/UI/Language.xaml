<Window x:Class="Code.UI.Language"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Code"
        mc:Ignorable="d"
        Title="Language" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid Margin="15">
        <StackPanel>
            <StackPanel Orientation="Horizontal" >
                <Label Name="lblQuestion" Grid.Column="1" Grid.RowSpan="2">Language:</Label>
                <ComboBox x:Name="languageBox"/>
            </StackPanel>

            <WrapPanel>
                <Button IsDefault="True" x:Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Content="_Ok"/>
                <Button IsCancel="True" MinWidth="60" Content="_Cancel"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
