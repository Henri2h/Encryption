<Controls:MetroTabItem x:Class="Code.UI.Tab.TabItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Code.UI.Tab"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"

             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBox x:Name="UITbText" 
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                 AcceptsReturn="True" 
                 AcceptsTab="True" SelectionChanged="UITbText_SelectionChanged" TextChanged="UITbText_TextChanged"/>
    </Grid>     
</Controls:MetroTabItem>
